<div class="w-full grid grid-cols-5 gap-4 grid-row">
  <% @books.each do |book| %>
    <div
      class="h-[20vw] bg-gray-300 rounded-r-lg border bg-center bg-cover relative text-white"
      style="background-image: url('<%= book.cover %>');"
    >
      <div class="relative z-10 p-2 flex flex-col justify-between h-full">
        <header>
          <span class="text-2xl"><%= book.title %></span>
        </header>

        <div class="text-md flex flex-col">
          <span>Author: <%= book.author.name %></span>
          <span>Pages_number: <%= book.pages_number %></span>
          <% if book.edition > 1 %>
            <span>Edition: <%= book.edition %></span>
          <% end %>
        </div>
      </div>
      <div class="bg-black opacity-30 absolute top-0 bottom-0 left-0 right-0 z-0"></div>
    </div>
  <% end %>
</div>
